<%= provide(:title, "New Post") %>

<%= render 'partials/header' %>

<div class="wrapper">
  <div class="container">
    <div class="fixed">
      <div class="staticsidebar">
        <div class="staticsidebartitle">
          SIGN IN
        </div>
        <div class="staticsidebarsubtitle">
          This is where, as a user, you will log into that sign. Once you sign in, you can do whatever you want, but the most important thing is to have fun.
        </div>
      </div>
    </div>
    <div class="staticcontent">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder: "Email", class: "text-field" %>
        </div>
        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "text-field" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
        <div class="actions">
          <%= f.submit "Create Post", class: "submit-button" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>

    </div>
  </div>
</div>

<%= render 'partials/footer' %>