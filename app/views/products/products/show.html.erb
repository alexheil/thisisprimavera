<%= provide(:title, sanitize(@product.title)) %>

<%= render 'partials/header' %>

<div class="wrapper">
	<div class="container">
		<div class="onespace">
			<div class="twocolumn">
				<%= @product.title %>
			</div>
			<div class="twocolumn rightalign smallfont">
				<%= @product.element %> - Gallery - <span class="minibuybutton prepurchaseformbutton">Buy</span>
			</div>
		</div>
		<div class="fivespace producttitle centeralign">
			<%= @product.title %>
		</div>
		<div class="xtralargefont centeralign threespacebottom">
			<%= @product.element %> - <%= @product.mini_description %>
		</div>
		<div class="productstaticsidebar">
			<div id="imageclick">
				<img srcset="<%= @product.image1 %>" width="100%" height="auto" />
			</div>
		</div>
		<div class="productstaticcontent">
			<div class="largefont onespacebottom">
				Price:
			</div>
			<div class="threespacebottom">
				$<%= @product.base_price %>
			</div>
			<div class="largefont onespace">
				Remaining:
			</div>
			<div class="threespacebottom">
				<%= @product.quantity %>
			</div>
			<div class="largefont onespace">
				Colors available:
			</div>
			<div class="threespacebottom">
				<%= @product.color %>
			</div>
			<div class="buybutton prepurchaseformbutton">
				Purchase
			</div>
			<div class="largefont twospace">
				Details:
			</div>
			<div class="staticsidebarsubtitle">
				<%= @product.description %>
			</div>
			<div class="largefont twospace">
				Breakdown:
			</div>
			<div>
				Product: $<%= @product.amount_to_product %>
			</div>
			<div>
				Cause: $<%= @product.amount_to_cause %>
			</div>
			<div>
				Company: $<%= @product.amount_to_company %>
			</div>

		</div>
	</div>
</div>

<%= render 'partials/footer' %>

<div id="back"></div>
<div class="prepurchaseform">
	<div class="prepurchaseforminside">
		<div id="close"></div>
		<img class="halfimage" srcset="<%= @product.image2 %>" width="100%" height="auto" />
		<div>
			<%= @product.title %>
		</div>
		<div>
			Price: <%= @product.base_price %>
		</div>
		<div>
			Shipping: <%= @product.shipping_price %>
		</div>
		<div>
			<%= @product.size %>
		</div>
		<div>
			<%= @product.color %>
		</div>
		<div>
			add a price
		</div>
		<div>
			Quantity:
		</div>
		<div class="buybutton">
			Checkout
		</div>
		<div>
      Visa, Mastercard, Discover, AMEX
    </div>
	</div>
</div>

<div id="back"></div>
<div id="front">
  <div class="lightboximage">
  <div id="close"></div>
    <img srcset="<%= @product.image1 %>" width="100%" height="auto" />
  </div>
</div>